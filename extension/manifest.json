{
  "name": "TextGrab",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Grab and analyze text from videos and images",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "src/hover_highlight/hover_highlight.css"
      ],
      "js": [
        "src/hover_highlight/hover_highlight.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "StudyBuddy",
    "default_icon": "icons/icondefault.png",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "commands": {
    "textgrab": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "Put your cursor on an image/video surface and use this shortcut to enable copying text on it"
    }
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "activeTab",
    "declarativeContent",
    "tabs",
    "storage"
  ]
}
