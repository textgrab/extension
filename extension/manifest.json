{
  "name": "TextGrab",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "TextGrab ...",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": 
      "background.js"
  },
  "action": {
    "default_title": "TextGrab",
    "default_icon": "icons/icondefault.png",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "permissions": [
    "scripting",
    "activeTab",
    "tabs",
    "storage"
  ]
}
