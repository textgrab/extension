{
  "name": "TextGrab",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Copy text from videos, images and live meetings! Grabbing text has never been easier",
  "icons": {
    "16": "icons/logo16.png",
    "32": "icons/logo32.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["src/hover_highlight/hover_highlight.css"],
      "js": ["src/hover_highlight/hover_highlight.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "TextGrab",
    "default_icon": "icons/logo48.png",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "commands": {
    "textgrab": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "Put your cursor on an image/video surface and use this shortcut to enable copying text on it"
    }
  },
  "permissions": ["https://*/*", "http://*/*", "activeTab", "declarativeContent", "tabs", "storage"]
}
